@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var Cliente = (MinaTolEntidades.DtoClientes.Cliente)Model;
    var materialesCliente = (IEnumerable<MinaTolEntidades.DtoClientes.ClienteTipoMaterial>)ViewBag.MaterialesCliente;
}

<link href="@Url.Content("~/Assets/css/EstilosBtnCambios/EstiloBtn.css")" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>

<style>
    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.3);
            color: white;
        }

    .btn-custom-cancel {
        background-color: red;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-custom-cancel:hover {
            background-color: darkred;
            transform: scale(1.3);
            color: white;
        }

    .btn-custom-direccion {
        background-color: #f4f80a;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-custom-direccion:hover {
            background-color: #dfe21d;
            transform: scale(1.1);
            color: white;
        }

    .btn-custom-clean {
        background-color: dodgerblue;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-custom-clean:hover {
            background-color: deepskyblue;
            transform: scale(1.3);
            color: white;
        }

    #contenedor {
        width: 800px;
        height: 700px;
        overflow-y: auto;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div id="contenedorMaterial"></div>

<form id="frmCliente" name="frmCliente" method="post" enctype="multipart/form-data">
    <div class="content">
        <br>
        <center><h1>Clientes</h1></center>
        <div class="tabla-consultas-roll">
            <div class="rectangulos" style="width: 100%;">
                <div class="row">
                    <div class="col-lg-3">
                        <label>ID Cliente:</label>
                        <input type="text" id="txtIdCliente" name="IdCliente" class="form-control" disabled />
                    </div>
                    <div class="col-lg-3">
                        <label>Nombre/Empresa:</label>
                        <input type="text" id="txtNombre" name="txtNombre" class="form-control" />
                    </div>
                    <div class="col-lg-3">
                        <label>Teléfono:</label>
                        <input type="text" id="txtTelefono" name="txtTelefono" class="form-control" />
                    </div>
                    <div class="col-lg-3">
                        <label>Email:</label>
                        <input type="email" id="txtEmail" name="txtEmail" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="col-lg-6">
                            <label>RFC:</label>
                            <input type="text" id="txtRFC" name="txtRFC" class="form-control" />
                        </div>
                        <div class="col-lg-6">
                            <label>Razon social:</label>
                            <input type="text" id="txtrazon" name="txtrazon" class="form-control" />
                        </div>
                        <div class="col-md-12">
                            <label>Comentarios:</label>
                            <textarea name="txtComentarios" id="txtComentarios" class="form-control" rows="6"></textarea>
                        </div>
                    </div>
                    <div class="col-md-3 table-responsive">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered table-striped dataTable no-footer" id="tableTipodematerial"></table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="button" class="btn btn-custom-clean" id="btnmaterial" name="btnmaterial">
                                    <i class="fa fa-plus"></i> Configuración de costos
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <br />
                        <input type="hidden" id="txtCreatedBy" name="CreatedBy" value="@User.Identity.Name" />
                        <input type="hidden" id="txtCreatedDt" name="CreatedDt" value="@DateTime.Now" />
                        <input type="hidden" id="txtUpdatedBy" name="UpdatedBy" value="@User.Identity.Name" />
                        <input type="hidden" id="txtUpdatedDt" name="UpdatedDt" value="@DateTime.Now" />
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="button" value="Guardar" onclick="SaveOrUpdateCliente()" class="btn btn-success" />
                            <a href="/Administracion/Clientes" class="btn btn-custom-cancel">Cancelar</a>
                        </div>
                    </div>
                </div>
                <br />
                <table id="tbCliente" class="table table-bordered table-striped" style="width: 100%;"></table>
            </div>
        </div>
</form>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-content">
            <form id="contenedor">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="exampleModalLabel">Dirección</h5>
                </div>
                <div class="modal-body">
                    <input hidden id="idCliente" name="idCliente" />
                    <label class="form-label">Nombre del Cliente:</label>
                    <input type="text" class="form-control" id="nombreCliente" name="nombreCliente" disabled />

                    <div class="row g-3 mt-3">
                        <div class="col-md-6">
                            <label class="form-label">No. Interno</label>
                            <input type="text" class="form-control" id="txtnointerno" name="no_interno" autocomplete="off" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">No. Externo</label>
                            <input type="text" class="form-control" id="txtnoexterno" name="no_externo" autocomplete="off" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Colonia</label>
                            <input type="text" class="form-control" id="txtcolonia" name="colonia" autocomplete="off" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">C.P.</label>
                            <input type="number" class="form-control" id="txtcp" name="cp" autocomplete="off" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Delegación</label>
                            <input type="text" class="form-control" id="txtdelegacion" name="delegacion" autocomplete="off" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Municipio</label>
                            <input type="text" class="form-control" id="txtmunicipio" name="municipio" autocomplete="off" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Estado (Ubicación)</label>
                            <input type="text" class="form-control" id="txtestado" name="estado_ubicacion" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer mt-3">
                    <button type="button" class="btn btn-danger" onclick="closeModal()">Cerrar</button>
                    <button type="button" class="btn btn-success" onclick="Guardar()">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="@(Url.StaticFile("Scripts/Catalogos/AltCliente.js"))"></script>
<script>
    var materialesClienteJson = JSON.parse('@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(materialesCliente))');
    var clienteJson = JSON.parse('@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Cliente))');
</script>
