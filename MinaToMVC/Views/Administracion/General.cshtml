                    <script>
                        document.addEventListener('DOMContentLoaded', () => {
                            fetch('datos_vueltas.php')
                                .then(response => {
                                    if (!response.ok) {
                                        throw new Error('Error en la respuesta de la red');
                                    }
                                    return response.json();
                                })
                                .then(datos => {
                                    renderChart(datos);
                                })
                                .catch(error => console.error('Error al cargar los datos:', error));
                        });

                        function renderChart(datos) {
                            const ctx = document.getElementById('graficaVueltas').getContext('2d');
                            const colors = {
                                'Todas': 'rgba(0, 255, 0, 0.5)', // Verde/limón
                                'Blanca': 'rgba(220, 20, 60, 0.5)', // Carmesí
                                'Escurridero': 'rgba(0, 123, 255, 0.5)', // Azul
                                'Amarilla': 'rgba(255, 205, 86, 0.5)' // Amarillo
                            };

                            if (!datos || typeof datos !== 'object') {
                                console.error('Datos inválidos recibidos:', datos);
                                return;
                            }

                            const datasets = Object.keys(datos).map(planta => ({
                                label: `Viajes en ${planta}`,
                                data: Array.isArray(datos[planta]) ? datos[planta].map(d => parseInt(d.total_vueltas, 10)) : [],
                                borderColor: colors[planta] || 'rgba(128, 128, 128, 0.5)',
                                backgroundColor: colors[planta] || 'rgba(128, 128, 128, 0.5)',
                                fill: true,
                                tension: 0.4
                            }));

                            new Chart(ctx, {
                                type: 'line',
                                data: {
                                    labels: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
                                    datasets
                                },
                                options: {
                                    responsive: true,
                                    plugins: {
                                        legend: {
                                            position: 'top',
                                            labels: {
                                                color: '#343a40',
                                                font: {
                                                    size: 14
                                                }
                                            }
                                        },
                                        title: {
                                            display: true,
                                            text: 'Estadísticas de Vueltas en el Año',
                                            color: '#343a40',
                                            font: {
                                                size: 18
                                            }
                                        }
                                    },
                                    scales: {
                                        y: {
                                            beginAtZero: true,
                                            title: {
                                                display: true,
                                                text: 'Cantidad de Vueltas',
                                                color: '#343a40',
                                                font: {
                                                    size: 14
                                                }
                                            },
                                            ticks: {
                                                color: '#343a40',
                                                font: {
                                                    size: 12
                                                }
                                            }
                                        },
                                        x: {
                                            title: {
                                                display: true,
                                                text: 'Meses',
                                                color: '#343a40',
                                                font: {
                                                    size: 14
                                                }
                                            },
                                            ticks: {
                                                color: '#343a40',
                                                font: {
                                                    size: 12
                                                }
                                            }
                                        }
                                    }
                                }
                            });
                        }
                    </script>

