    <script>
        function actualizarInformacionGeneral() {
            fetch('actualizar_datos.php')
                .then(response => response.json())
                .then(data => {
                    // Actualizaciones que ocurren cada 5 minutos
                    // Actualización de las ventas por planta
                    const ingresosUl = document.querySelector('#ingresos .list-group');
                    ingresosUl.innerHTML = ''; // Limpiar los elementos existentes
                    data.ventasPorPlanta.forEach(venta => {
                        const itemHtml = `<li class='list-group-item d-flex bg-transparent justify-content-between align-items-center'>
                                      ${venta.planta_servicio} <span class="badge bg-success rounded-pill">${venta.total_vendido}</span>
                                    </li>`;
                        ingresosUl.insertAdjacentHTML('beforeend', itemHtml);
                    });

                    // Actualización de los top clientes
                    const clientesUl = document.querySelector('#mejores-clientes .list-group');
                    clientesUl.innerHTML = ''; // Limpiar los elementos existentes
                    data.topClientes.forEach(cliente => {
                        const itemHtml = `<li class='list-group-item d-flex bg-transparent justify-content-between align-items-center'>
                                      ${cliente.nombre} <span class="badge bg-success rounded-pill">${cliente.total_en_carrito}</span>
                                    </li>`;
                        clientesUl.insertAdjacentHTML('beforeend', itemHtml);
                    });

                    // Actualización de los viajes por mes
                    document.getElementById('contadorEscurridero').textContent = data.viajesPorMes['Escurridero'];
                    document.getElementById('contadorBlanca').textContent = data.viajesPorMes['Blanca'];
                    document.getElementById('contadorAmarilla').textContent = data.viajesPorMes['Amarilla'];
                })
                .catch(error => console.error('Error al actualizar la información:', error));
        }

        function actualizarEstadisticasYCompras() {
            fetch('actualizar_datos_rapidos.php') // Asegúrate de tener este archivo PHP que devuelva solo las estadísticas de viajes y las compras recientes
                .then(response => response.json())
                .then(data => {
                    // Actualizaciones que ocurren cada minuto
                    // Aquí iría el código para actualizar la gráfica de estadísticas de viajes y la lista de compras recientes
                    // Ejemplo: actualizarGráficaViajes(data.estadisticasViajes);
                    // Ejemplo: actualizarComprasRecientes(data.comprasRecientes);
                })
                .catch(error => console.error('Error al actualizar la información:', error));
        }

        // Llama a la función al cargar la página y luego cada 5 minutos para actualizaciones generales
        document.addEventListener('DOMContentLoaded', actualizarInformacionGeneral);
        setInterval(actualizarInformacionGeneral, 300000); // 300000 ms = 5 minutos

        // Actualización cada minuto para las estadísticas de viajes y las compras recientes
        setInterval(actualizarEstadisticasYCompras, 60000); // 60000 ms = 1 minuto
