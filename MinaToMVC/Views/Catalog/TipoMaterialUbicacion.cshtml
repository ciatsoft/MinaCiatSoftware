@model MinaTolEntidades.DtoCatalogos.DtoTipoMaterialUbicacion
@{
    var unidadmedida = (List<MinaTolEntidades.DtoSucursales.UnidadMedida>)ViewBag.UnidadDeMedida;
    var ubicacion = (List<MinaTolEntidades.DtoCatalogos.DtoUbicacion>)ViewBag.Ubicacionnombre;
    ViewBag.Title = "TipoMaterialUbicacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var estatus = new List<string> { "Activo", "Inactivo" };
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<link href="~/Assets/css/dataTables.dataTables.min.css" rel="stylesheet" />
<script src="~/Assets/js/dataTables.min.js"></script>

<div class="content">

    <form id="frmTipoMaterialUbicacion" name="frmTipoMaterialUbicacion" method="post" enctype="multipart/form-data" action="@Url.Action("SaveOrUpdateTipoMaterialUbicacion","Catalog")">
        @Html.HiddenFor(x => x.Id)
        <br>
        <center><h1>Tipo de Material</h1></center>
        <div class="tabla-consultas-tipoMaterial">
            <div class="rectangulos" style="width: 100%;">
                <div class="row">
                    <div class="col-lg-3">
                        <label>ID Material:</label>
                        <input type="text" id="txtidtipomaterial" class="form-control" disabled />
                    </div>
                    <div class="col-lg-3">
                        <label>Nombre:</label>
                        <input type="text" id="txtNombreTipoMaterial" class="form-control" />
                    </div>
                    <div class=" col-lg-3">
                        <label>Descripcion:</label>
                        <input type="text" id="txtDescripcionTipoMaterial" class="form-control" />
                    </div>
                    <div class="col-lg-3">
                        <label>Ubicacion:</label>
                        <select id="ddlUbicacion" name="ddlUbicacion" class="form-control">
                            @foreach (var ubica in ubicacion)
                            {
                                <option value="@ubica.Id">@ubica.NombreUbicacion</option>
                            }
                        </select>
                  </div>
                   
                </div>
                <div class="row">

                    <div class="col-lg-3">
                        <label>Unidad de medida:</label>
                        <select id="ddlUnidadDeMedida" name="ddlUnidadDeMedida" class="form-control">
                            @foreach (var unidad in unidadmedida)
                            {
                                <option value="@unidad.Id">@unidad.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class=" col-lg-3">
                        <label>Estatus:</label>
                        <input type="checkbox" name="chbEstatus" id="chbEstatus" value="" class="form-control" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <input type="button" id="btnGuardarTipodeMaterial" value="Guardar" class="btn btn-success" />
                        <input type="button" value="Cancelar" class="btn btn-warning" />
                    </div>
                </div>
                <input type="hidden" id="txtCreatedBy" value="@User.Identity.Name" />
                <input type="hidden" id="txtCreatedDt" value="@DateTime.Now" />
                <input type="hidden" id="txtUpdatedBy" value="@User.Identity.Name" />
                <input type="hidden" id="txtUpdatedDt" value="@DateTime.Now" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped" id="tableTipodematerial" style="width: 100%;"></table>
            </div>
        </div>
    </form>
</div>

<script>
    $(function () {
        $("#frmTipoMaterialUbicacion").validate({
            rules: {
                "Nombre": "required",
                "Descripcion": "required",
                "UnidadDeMedida": "required",
                "Ubicacion": "required"
            },
            messages: {
                "Nombre": "Campo Obligatorio",
                "Descripcion": "Campo Obligatorio",
                "UnidadDeMedida": "Campo Obligatorio",
                "Ubicacion": "Campo Obligatorio"

            }
        });

    });

     var tipoMaterialUbicacionJson = JSON.parse('@Html.Raw((Newtonsoft.Json.JsonConvert.SerializeObject(Model)))');
     var urlGetAllTipoMaterial = "@Url.Action("GetAllTipoMaterialUbicacion", "Catalog")";
     var urlTipoMaterialPorId = "@Url.Action("GetTipoMaterialUbicacionById", "Catalog")";
     var urlSaveOrUpdateTipoMaterial= "@Url.Action("SaveOrUpdateTipoMaterialUbicacion", "Catalog")";
</script>
<script src="~/Scripts/Catalogos/TipoMaterialUbicacion.js"></script>