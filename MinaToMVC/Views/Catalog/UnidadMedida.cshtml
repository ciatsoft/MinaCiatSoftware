
@{
    ViewBag.Title = "UnidadMedida";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var unidad = (MinaTolEntidades.DtoSucursales.UnidadMedida)Model;
}

<
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script src="@(Url.StaticFile("Scripts/Catalogos/UnidadMedida.js"))"></script>
<style>
    .btn-success {
        background-color: #28a745; /* Verde para el botón Guardar */
        color: white;
        border: none;
        transition: all 0.3s ease; /* Transición suave para el cambio de tamaño y color */
    }

        .btn-success:hover {
            background-color: #218838; /* Color verde más oscuro al pasar el ratón */
            transform: scale(1.3); /* Aumenta el tamaño del botón */
            color: white; /* Color de texto blanco */
        }
    .btn-custom-cancel {
        background-color: red; /*  para el botón Guardar */
        color: white;
        border: none;
        transition: all 0.3s ease; /* Transición suave para el cambio de tamaño y color */
    }

        .btn-custom-cancel:hover {
            background-color: darkred; /* Color  más oscuro al pasar el ratón */
            transform: scale(1.3); /* Aumenta el tamaño del botón */
            color: white; /* Color de texto blanco */
        }
    .btn-custom-clean {
        background-color: dodgerblue; /*  para el botón Guardar */
        color: white;
        border: none;
        transition: all 0.3s ease; /* Transición suave para el cambio de tamaño y color */
    }

        .btn-custom-clean:hover {
            background-color: deepskyblue; /* Color  más oscuro al pasar el ratón */
            transform: scale(1.3); /* Aumenta el tamaño del botón */
            color: white; /* Color de texto blanco */
        }
</style>

<div class="content">

    <form id="frmunidadmedida" name="frmunidadmedida" method="post" enctype="multipart/form-data">
        <br>
        <center><h1>Unidad De Medida</h1></center>
        <div class="tabla-consultas-tableUnidadMedida">
            <div class="rectangulos" style="width: 100%;">
                <div class="row">
                    <div class="col-lg-3">
                        <label>ID Unidad Medida:</label>
                        <input type="text" id="txtunidadmedida" class="form-control" disabled />
                    </div>
                    <div class="col-lg-3">
                        <label>Nombre:</label>
                        <input type="text" id="txtNombre" class="form-control" />
                    </div>
                    <div class=" col-lg-3">
                        <label>Descripción:</label>
                        <input type="text" id="txtDescripcion" class="form-control" />
                    </div>
                    <div class=" col-lg-3">
                        <label>Estatus:</label>
                        <input type="checkbox" name="chbEstatus" id="chbEstatus" value="" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <input href="/Catalog/UnidadMedida" type="button" value="Guardar" onclick="SaveOrUpdateUnidadMedida()" class="btn btn-success" />
                        <a href="/Catalog/UnidadMedida" class="btn btn-custom-cancel">Cancelar</a>

                    </div>
                </div>
            </div>
        </div>  <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped" id="tableUnidadMedida" style="width: 100%;"></table>
            </div>
        </div>
        <input type="hidden" id="txtCreatedDt" value="@DateTime.Now" />
    </form>
</div>

<script>
    var unidadJson = JSON.parse('@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(unidad))');
</script>