@model MinaTolEntidades.DtoCatalogos.DtoUbicacion
@{
    ViewBag.Title = "Ubicacion";
    var ubicacion = (List<MinaTolEntidades.DtoCatalogos.DtoUbicacion>)ViewBag.AreaDeUbicacion;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var estatus = new List<string> { "Activo", "Inactivo" };
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<link href="~/Assets/css/dataTables.dataTables.min.css" rel="stylesheet" />
<script src="~/Assets/js/dataTables.min.js"></script>

<div class="content">

    <form id="frmubicacion" name="frmubicacion" method="post" enctype="multipart/form-data" action="@Url.Action("SaveOrUpdateUbicacion","Catalog")">
        @Html.HiddenFor(x => x.Id)
        <br>
        <center><h1> Ubicacion </h1></center>
        <div class="tabla-consultas-ubicacion">
            <div class="rectangulos" style="width: 100%;">
                <div class="row">
                    <div class="col-lg-3">
                        <label>ID Ubicacion:</label>
                        <input type="text" id="txtIdUbicacion" class="form-control" disabled />
                    </div>
                    <div class="col-lg-3">
                        <label>NombreUbicacion:</label>
                        <input type="text" id="txtNombreUbicacion" class="form-control" />
                    </div>
                    <div class=" col-lg-3">
                        <label>DescripcionUbicacion:</label>
                        <input type="text" id="txtDescripcionUbicacion" class="form-control" />
                    </div>
                    <div class=" col-lg-3">
                        <label>Estatus:</label>
                        <input type="checkbox" name="chbEstatus" id="chbEstatus" value="" class="form-control" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <input type="button" id="btnGuardarUbicacion" value="Guardar" class="btn btn-success" />
                        <a class="btn btn-warning" href="/Catalog/Ubicacion">Cancelar</a>
                        <input type="button" value="Cancelar" class="btn btn-warning" />
                    </div>
                </div>
                <input type="hidden" id="txtCreatedBy" value="@User.Identity.Name" />
                <input type="hidden" id="txtCreatedDt" value="@DateTime.Now" />
                <input type="hidden" id="txtUpdatedBy" value="@User.Identity.Name" />
                <input type="hidden" id="txtUpdatedDt" value="@DateTime.Now" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped" id="tableUbicacion" style="width: 100%;"></table>
            </div>
        </div>
    </form>
</div>

<script>
    $(function () {
         jQuery.validator.addMethod("lettersonly", function (value, element) {
        return this.optional(element) || /^[a-z\s]+$/i.test(value);
         }, "Only alphabetical characters");
        $("#frmubicacion").validate({
            rules: {
                "txtNombreUbicacion": {
                    lettersonly: true,
                    required: true
                },
                "txtDescripcionUbicacion": {
                    lettersonly: true,
                    required: true
                }               
            },
            messages: {
                "txtDescripcionUbicacion": {
                    required: "El campo '   Ubicacion' es requerido.",
                    lettersonly: "Este campo no acepta valores númericos."
                },
                "txtNombreUbicacion": {
                    required: "El campo 'Nombre' es requerido.",
                    lettersonly: "Este campo no acepta valores númericos."
                }
                

            }
        });
    });
     var UbicacionJson = JSON.parse('@Html.Raw((Newtonsoft.Json.JsonConvert.SerializeObject(Model)))');
     var urlGetAllUbicacion  = "@Url.Action("GetAllUbicacion", "Catalog")";
     var urlUbicacionPorId = "@Url.Action("GetUbicacionById", "Catalog")";
    var urlSaveOrUpdateUbicacion= "@Url.Action("SaveOrUpdateUbicacion", "Catalog")";

</script>
<script src="~/Scripts/Catalogos/Ubicacion.js"></script>