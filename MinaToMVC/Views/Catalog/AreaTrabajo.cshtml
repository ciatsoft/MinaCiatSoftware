@model MinaTolEntidades.DtoCatalogos.DtoAreaTrabajo
    @{
        ViewBag.Title = "AreaTrabajo";
        Layout = "~/Views/Shared/_Layout.cshtml";
        var estatus = new List<string> { "Activo", "Inactivo" };
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <link href="~/Assets/css/dataTables.dataTables.min.css" rel="stylesheet" />
    <script src="~/Assets/js/dataTables.min.js"></script>

<div class="content">
    <br>
    <center><h1>Area de Trabajo</h1></center>
    <div class="tabla-consultas-areadetrabajo" >
        <div class="rectangulos" style="width: 100%;">
            <div class="row">
                <div class="col-lg-3">
                    <label>ID area trabajo:</label>
                    <input type="text" id="txtidareatrabajo" class="form-control" disabled />
                </div>
                <div class="col-lg-3">
                    <label>Nombre:</label>
                    <input type="text" id="txtNombre" class="form-control" />
                </div>
                <div class=" col-lg-3">
                    <label>Descripcion:</label>
                    <input type="text" id="txtDescripcion" class="form-control" />
                </div>
                <div class=" col-lg-3">
                    <label>Estatus:</label>
                    <select id="ddlEstatus" class="form-control">
                        @foreach (var est in estatus)
                        {
                            <option value="@est">@est</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <input type="button" value="Cancelar" class="btn btn-warning" />
                </div>
            </div>
            <input type="hidden" id="txtCreatedBy" value="@User.Identity.Name" />
            <input type="hidden" id="txtCreatedDt" value="@DateTime.Now" />
            <input type="hidden" id="txtUpdatedBy" value="@User.Identity.Name" />
            <input type="hidden" id="txtUpdatedDt" value="@DateTime.Now" />
        </div>
    </div>
</div>
<table id="tblAreaTrabajo" class="table" style="width:100%;"></table>
<script>
    $(document).ready(function () {
        function actualizarTabla(filtro) {
            $.ajax({
                url: "actualizar_tabla.php",
                type: "POST",
                data: { filtro: filtro },
                success: function (response) {
                    $("#areatrabajoTable tbody").html(response);
                },
                error: function (xhr, status, error) {
                    console.error("Error al actualizar la tabla: " + error);
                }
            });
        }
    }
</script>

<script src="~/Scripts/Catalogos/.js"></script>
    

