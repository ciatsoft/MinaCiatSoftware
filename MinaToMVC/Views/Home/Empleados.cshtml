@{
    ViewBag.Title = "Empleados";
}



<div class="content">
    <br>
    <center><h1>Empleados</h1></center>
    <div class="tabla-consultas-empleados">

        <div class="rectangulos" style="width: 100%;">

            <!-- Rectángulo: Total de empleados -->
            <div class="empleados" style="text-align: center; ">
                <button class="show-hide-button" id="totaldeempleados" style="width: 300px; background-color:#464d70">
                    <i class="fa fa-users" aria-hidden="true"></i> <!-- Ícono de FontAwesome -->
                    <h2 style="font-size: 20px;">Total de empleados</h2>
                </button>

            </div>

            <script>
                $(document).ready(function () {
                    // Evento de clic para el botón de total de empleados
                    $("#totaldeempleados").click(function () {
                        location.reload()
                    });
                });
            </script>

            <!-- Rectángulo: Empleados con retardos -->
            <div class="retardos" style="text-align: center;">
                <button class="show-hide-button" id="empleadosConRetardosButton" style="width: 300px;background-color:#464d70">
                    <i class="fa fa-clock" aria-hidden="true"></i> <!-- Ícono de FontAwesome -->
                    <h2 style="font-size: 20px;">Empleados con retardos</h2>
                </button>

            </div>

            <script>
                $(document).ready(function () {
                    // Evento de clic para el botón de empleados con retardos
                    $("#empleadosConRetardosButton").click(function () {
                        var filtro = "conRetardos";
                        actualizarTabla(filtro);
                    });

                    // Función para actualizar la tabla con los datos filtrados
                    function actualizarTabla(filtro) {
                        $.ajax({
                            url: "actualizar_tabla.html",
                            type: "POST",
                            data: { filtro: filtro },
                            success: function (response) {
                                $("#employeeTable tbody").html(response);
                            },
                            error: function (xhr, status, error) {
                                console.log("Error al actualizar la tabla: " + error);
                            }
                        });
                    }
                });
            </script>

            <!-- Rectángulo: Empleados con faltas -->
