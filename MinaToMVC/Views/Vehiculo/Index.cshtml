@model MinaTolEntidades.DtoClientes.Vehiculo
@{
    ViewBag.Title = "Alta/Edición Vehiculos";
    var tiposVehiculos = (IEnumerable<SelectListItem>)ViewBag.TipoVehiculos;
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>

<style>
    .btn-success {
        background-color: #28a745; /* Verde para el botón Guardar */
        color: white;
        border: none;
        transition: all 0.3s ease; /* Transición suave para el cambio de tamaño y color */
    }

        .btn-success:hover {
            background-color: #218838; /* Color verde más oscuro al pasar el ratón */
            transform: scale(1.3); /* Aumenta el tamaño del botón */
            color: white; /* Color de texto blanco */
        }

    .btn-custom-cancel {
        background-color: #FF5733; /*  para el botón Guardar */
        color: white;
        border: none;
        transition: all 0.3s ease; /* Transición suave para el cambio de tamaño y color */
    }

        .btn-custom-cancel:hover {
            background-color: darkred; /* Color  más oscuro al pasar el ratón */
            transform: scale(1.3); /* Aumenta el tamaño del botón */
            color: white; /* Color de texto blanco */
        }

    .btn-custom-delete {
        background-color: #C70039; /*  para el botón Guardar */
        color: white;
        border: none;
        transition: all 0.3s ease; /* Transición suave para el cambio de tamaño y color */
    }

        .btn-custom-delete:hover {
            background-color: darkred; /* Color  más oscuro al pasar el ratón */
            transform: scale(1.3); /* Aumenta el tamaño del botón */
            color: white; /* Color de texto blanco */
        }

    .btn-custom-clean {
        background-color: dodgerblue; /*  para el botón Guardar */
        color: white;
        border: none;
        transition: all 0.3s ease; /* Transición suave para el cambio de tamaño y color */
    }

        .btn-custom-clean:hover {
            background-color: deepskyblue; /* Color  más oscuro al pasar el ratón */
            transform: scale(1.3); /* Aumenta el tamaño del botón */
            color: white; /* Color de texto blanco */
        }
</style>

@using (Html.BeginForm("SaveOrUpdateVehiculo", "Vehiculo", FormMethod.Post, new { enctype = "multipart/form-data", @name = "frmVehiculoCrud", @id = "frmVehiculoCrud" }))
{

    @Html.HiddenFor(x => x.Estatus)
    @Html.HiddenFor(x => x.CreatedDt)
    @Html.HiddenFor(x => x.CreatedBy)
    @Html.HiddenFor(x => x.UpdatedBy)
    @Html.HiddenFor(x => x.UpdatedDt)

    <div class="content">
        <!-- Campos ocultos para los datos automáticos -->

        <br>
        <center><h1>Vehiculos</h1></center>
        <div class="tabla-consultas-empleados">
            <div class="rectangulos" style="width: 100%;">
                <div class="row">
                    <div class="col-lg-3">
                        <label>ID del Trabajador:</label>

                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @disabled = "" })
                    </div>
                    <div class="col-lg-3">
                        <label>Placa:</label>
                        @Html.TextBoxFor(x => x.Placa, new { @class = "form-control", @id = "txtPlaca" })
                    </div>
                    <div class="col-lg-3">
                        <label>Color:</label>
                        @Html.TextBoxFor(x => x.Color, new { @class = "form-control", @id = "txtColor" })
                    </div>
                    <div class="col-lg-3">
                        <label>Tipo de vehiculo:</label>
                        @Html.DropDownListFor(x => x.TipoVehiculo.Id, tiposVehiculos, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-between">
                        <div>
                            <input type="button" onclick="SaveOrupdateTrabajador()" value="Guadar" class="btn btn-success" />
                            <input type="button" name="btnEliminar" id="btnEliminar" value="Eliminar" class="btn btn-custom-delete" />
                        </div>
                        <a class="btn btn-custom-cancel" href="/Empleado/AltaEdicion">Cancelar</a>
                    </div>
                </div>
            </div>
            <table id="tblvehiculo" class="table" style="width:100%;">
            </table>
            <br>
        </div>
    </div>
}


<script src="@(Url.StaticFile("Scripts/Vehiculo/Vehiculo.js"))"></script>
