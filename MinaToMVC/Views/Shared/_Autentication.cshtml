@{
    ViewBag.Title = "Iniciar Sesión";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@ViewBag.Title</title>

    <link rel="icon" href="~/Assets/img/Logo.ico" type="image/x-icon">

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/Assets/css/bootstrap.css" />

    <!-- Custom styles for this template -->
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/Assets/css/responsive.css" rel="stylesheet" />
    <link href="~/Assets/styles.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Inicio a los llamados de js -->
    <script src="~/Assets/js/script.js"></script>
    <script src="~/Assets/administracion/js/script.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- Fin a los llamados de js -->
    <script src="~/Scripts/Comun/Comun.js"></script>


</head>

<style>
    body {
        background-image: url('@Url.Content("~/Assets/img/minalogin.jpg")') !important;
        background-size: cover;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        overflow: hidden; /* Opcional: para evitar scroll si el contenido es más grande que la vista */
    }

    .sesion_login {
        background-color: rgba(255, 255, 255, 0.8) !important;
        padding: 20px;
        border: 1px solid black;
        width: 400px;
        border-radius: 25px;
        text-align: center;
        position: absolute; /* Asegura que el elemento esté posicionado absolutamente */
        top: 50%; /* Centra verticalmente */
        left: 50%; /* Centra horizontalmente */
        transform: translate(-50%, -50%); /* Ajusta el centro del elemento a la mitad de la pantalla */
        z-index: 2;
    }

    .sesion_login .user-icon {
        font-size: 50px;
        color: black;
        margin-bottom: 20px;
    }

    h2 {
        color: black;
        margin-bottom: 20px;
    }

    .input-container {
        position: relative;
        margin-bottom: 20px;
    }

    .input-container i {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: black;
    }

    .input-container input {
        background-color: rgba(255, 255, 255, 0.5) !important;
        border: none;
        padding: 10px 10px 10px 30px; /* Ajustar el padding para dejar espacio para el icono */
        width: calc(100% - 40px); /* Ajustar el ancho teniendo en cuenta el padding y el icono */
        margin-bottom: 0;
    }

    input[type="button"] {
        width: 100%;
        cursor: pointer;
        background-color: #005087;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 50px;
        font-size: 25px;
    }
</style>

<style>
    .field-validation-error {
        color: red;
    }

    form .error {
        color: #ff0000;
        font-size: 1rem;
        position: relative;
        line-height: 1;
        width: 100%;
    }

    .requerid {
        color: red !important;
    }

    td.details-control {
        background: url('https://datatables.net/examples/resources/details_open.png') no-repeat center center;
        cursor: pointer;
    }

    tr.shown td.details-control {
        background: url('https://datatables.net/examples/resources/details_close.png') no-repeat center center;
    }

    searchTableButton {
        background: url('/Assets/img/magnify.png');
    }
</style>


<body>

    <div class="container">
        <div class="row">
            <div class="col-ml-12">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="container body-content">
</body>

</html>