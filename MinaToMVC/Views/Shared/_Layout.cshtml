        background-color: rgba(255, 255, 255, 0.7); /* Fondo blanco con 50% de opacidad */
    }

    .main_title_html {
        background-color: white;
        font-family: Helvetica Neue;
        font-size: 30px;
        color: black;
        width: 50%;
        padding: 5px;
        border: 20px;
        border-radius: 100px;
        border: 3px solid black;
        position: relative;
        top: 0;
        left: 20%;
        transform: translateX(-40%);
    }

    .tabla-clientes {
        background-color: #e6e1cd;
    }

    .panel-body {
        background-color: #e6e1cd;
    }

    body {
        background-color: #83988e;
    }

    /* Estilos para el formulario y botones */
    .form-inline {
        display: flex;
        align-items: center;
        gap: 10px;
        color: black;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: .375rem .75rem;
        color: black;
    }

    .btn {
        display: inline-block;
        font-weight: 400;
        color: #212529;
        text-align: center;
        vertical-align: middle;
        user-select: none;
        background-color: transparent;
        border: 1px solid transparent;
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: .25rem;
        transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

    .btn-primary {
        color: black;
        background-color: #007bff;
        border-color: #007bff;
    }

    /* Estilos para la tabla */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        color: black;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
        color: black;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    /* Botones dentro de la tabla */
    table button {
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: black;
    }

    table button:hover {
        opacity: 0.8;
        color: black;
    }

    .aprobar {
        background-color: #28a745;
        color: black;
    }

    .denegar {
        background-color: #dc3545;
        color: black;
    }

    /* Estilos para formularios modales y otros elementos interactivos */
    .formularioComprobante {
        display: none;
        margin-top: 10px;
        color: black;
    }

    input[type="file"] {
        margin-top: 10px;
        color: black;
    }

    center h1 {
        background-color: white;
        font-family: Helvetica Neue;
        font-size: 30px;
        color: black;
        width: 70%;
        padding: 5px;
        border: 20px;
        border-radius: 100px;
        border: 3px solid black;
    }
</style>

